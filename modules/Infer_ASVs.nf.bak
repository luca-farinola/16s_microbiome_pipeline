/* Backup of Infer_ASVs.nf before editing */

/* =========================================
   DADA2 ASV Inference
   ========================================= */

nextflow.enable.dsl = 2

/* =========================================
   PROCESS: DADA2 - Learn Error Models and Infer ASVs
   ========================================= */

process DADA2_ERR {
      tag { sample_id }
      label 'process_low'
      publishDir "${params.output_dir}/${params.asv_dir}", mode: 'rellink'
   
      conda "bioconda::bioconductor-dada2=1.34.0 conda-forge::r-base=4.4.3 conda-forge::tbb=2020.2"
      container "${ workflow.containerEngine == 'singularity' && !task.ext.singularity_pull_docker_container ?
        'https://depot.galaxyproject.org/singularity/bioconductor-dada2:1.34.0--r44he5774e6_2' :
        'biocontainers/bioconductor-dada2:1.34.0--r44he5774e6_2' }"
   
      input:
      tuple val(sample_id), path(read1), path(read2)
   
      output:
         tuple val(sample_id), path("*.err.rds"), emit: errormodel
         tuple val(sample_id), path("*.err.pdf"), emit: pdf
         tuple val(sample_id), path("*.err.svg"), emit: svg
         tuple val(sample_id), path("*.err.log"), emit: log

      script:
      """   
      #!/usr/bin/env Rscript
        suppressPackageStartupMessages(library(dada2))
        set.seed($) # Initialize random number generator for reproducibility

        fnFs <- sort(list.files(".", pattern = ".filt.fastq.gz", full.names = TRUE))

        sink(file = "${}.err.log")
        errF <- learnErrors(fnFs, $, multithread = $task.cpus, verbose = TRUE)
        saveRDS(errF, "${}.err.rds")
        sink(file = NULL)

        pdf("${}.err.pdf")
        plotErrors(errF, nominalQ = TRUE)
        dev.off()
        svg("${}.err.svg")
        plotErrors(errF, nominalQ = TRUE)
        dev.off()

        sink(file = "${}.err.convergence.txt")
        dada2:::checkConvergence(errF)
        sink(file = NULL)

        write.table('learnErrors\t$', file = "learnErrors.args.txt", row.names = FALSE, col.names = FALSE, quote = FALSE, na = '')
        writeLines(c("\"${task.process}\":", paste0("    R: ", paste0(R.Version()[c("major","minor")], collapse = ".")),paste0("    dada2: ", packageVersion("dada2")) ), "versions.yml")
        """ "

}
